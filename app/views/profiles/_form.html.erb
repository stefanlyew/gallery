<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>
 <div class="row-fluid">
  <h3 class="pull-left">Edit Profile Page</h3>
  <div class="actions pull-right">
      <%= f.submit nil, class: 'btn btn-primary' %>    
      <%= link_to "Back to Galleries Manager", galleries_path, class: 'btn' %>
  </div>
</div>
 <div class="row">
    <div class="span12">
      <h4><%= f.input :quote, input_html: { style: "width: 1100px;" } %></h4>
    </div>
  </div>
  <br/>
  <div class="row">
    <div class="span12">
      <%= f.input :photo, as: :file, :label => "Upload Artist Photo(Optimal Size 1200x300): " %>
        <% if @profile.photo? %>
          <%= image_tag @profile.photo %>
        <% else %>
         <img src="http://placehold.it/1200x300" alt="" />
        <% end %>
    </div>
  </div>
  <br/>
  <div class="span6">
    <p> <%= f.input :statement, input_html: { style: "width: 500px; height: 350px;" }  %></p>
  </div>
  <div class="span5">
    <p>You can now add a link by using HTML "<a href="http://www.w3schools.com">Visit W3Schools.com!</a>"</p>
     <%= f.input :resume, as: :file, :label => "Upload Resume PDF" %>
     <% if @profile.resume? %>
       <%= link_to "Current Resume Attached", @profile.resume.url %>
     <% end %>
     <%= f.input :news %>
     <%= f.input :recent_exhibits %>
     <%= f.input :bibliography %>
     <%= f.input :contact %>
 </div>
</div>
  </div>


<% end %>

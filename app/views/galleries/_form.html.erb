<%= form_for(@gallery) do |f| %>
  <!-- ERRORS MESSAGE -->
  <% if @gallery.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@gallery.errors.count, "error") %> prohibited this gallery from being saved:</h2>

      <ul>
      <% @gallery.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <!-- ERRORS MESSAGE -->

        <div class="row">
              <div class="span3"></div>
              <div class="span3">
                <%= f.label :title, 'Gallery Title' %>
                <%= f.text_field :title %>
              </div>
              <div class="span3">
                <%= f.label :description %>
                <%= f.text_field :description %>
              </div>
              <div class="span3">
                <i class="icon-large icon-check"></i>
                <%= f.submit 'Update the Art Selections for this Gallery', :class => 'btn btn-warning' %>
              </div>

        </div>

        <div class="well"><div id="placeHolder"></div></div>
        <div class="container gallery">

          
            <h5>Select What Art Pieces You Want in this Gallery</h5>
            <ul class="thumbnails" id="container">
                <% @all_artworks.each do |artwork| %>
                  <li class="span3" data-category=<%= artwork.category %> data-keyword="Harrison Ford, Rutger Hauer, Sean Young, Edward James Olmos" data-medium="#{artwork.medium}" data-year=<%= artwork.year %>>
                    <div class="thumbnail">
                        <%= link_to image_tag(artwork.asset(:thumbnail)), artwork %>
                      <div class="caption">

                        <%= check_box_tag :artwork_ids, artwork.id, @current_artworks.include?(artwork), name: 'gallery[artwork_ids][]' %>
                        <%= label_tag :artwork_ids, artwork.title -%>  
                      </div>
                    </div>
                  </li>
                <% end %>
            </ul>
        </div>      
<% end %>
<!-- FILTRIFY ================== -->
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
<%= javascript_include_tag "filtrify/script.js" %>
<%= javascript_include_tag "filtrify/filtrify.min.js" %>
<script type="text/javascript">
    $(function() {

        $.filtrify("container", "placeHolder");

    });
</script>

<%= stylesheet_link_tag "main" %> 
<!-- Pretty Photo Window -->
  <script src="glisse.js"></script>
  <script>
  $(function () {
      $('.pics').glisse({
          changeSpeed: 550, 
          speed: 100,
          effect:'bounce',
          fullscreen: true
      }); 
  });
  </script>
<!-- End Pretty Photo Window -->

<%= link_to 'Galleries', galleries_path %> |
<%= link_to 'Edit', edit_gallery_path(@gallery) %>

 
 <!-- debugging -->

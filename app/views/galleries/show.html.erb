            <div class="gallery">
            <h2 class="page-title"><%= @gallery.title %></h2>

      <!-- have to make this sortable only if signed in -->
      <ul class="thumbnails" id="sortable" data-update-url="<%= sort_gallery_path(@gallery) %>"> 
        <% @artworks.each do |artwork| %>
                  <li class="span3" id="artwork_<%= artwork.id %>"> <!-- need id of model -->
                    <!-- This was a crazy little string-interpolation puzzle-->
                        <%= image_tag artwork.asset, class: "thumbnail pics", rel: 'group1', alt: "", :data => { :'glisse-big' => "#{artwork.asset}" }, title: "<i>#{artwork.title}</i>, #{artwork.year}. #{artwork.medium}. #{artwork.size}. Margaret Tsirantonakis. " %>
                  </li>
                <% end %>

            </ul><!--end thumbnails -->




<!-- create or edit? -->

<h2>Navigation Bar Featured galleries</h2>
<h6>Drag And Drop To Reorder(will update on page refresh)</h6>
<ol class="sortable" data-update-url="<%= featuredsort_galleries_url %>"> 
<% featured_galleries.each do |gallery| %>
    <li id="gallery_<%= gallery.id %>"><%= gallery.title %>
        <%= link_to 'Edit', edit_gallery_path(gallery) %>
        <!-- <%= link_to 'Remove From Featured' %> -->
    </li>
<% end %>
</ol>

<br />

<h3>Homepage Carousel Slideshow Pictures (Details)</h3>
<%= link_to "Add New Picture For Homepage", new_carousel_item_path, :class => 'btn btn-success' %>
<h6>Drag And Drop To Reorder</h6>
<ul class="sortable thumbnails" data-update-url="<%= sort_carousel_items_url %>"> 
<% @carousel_items.each do |item| %>
    <li id="carousel_item_<%= item.id %>">
      <div class="thumbnail">
          <%= image_tag item.asset(:thumbnail) %>
          <div class="caption">
              <%= link_to 'Edit', edit_carousel_item_path(item) %>
              <div class="pull-right"><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></div>
          </div>
        </div>
    </li>
<% end %>
</ul>


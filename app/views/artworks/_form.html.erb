<!-- autocomplete plugin -->
<script>
    $(function(){
        var sampleTags = $('#tagit').data('keywords');
        $('#tagit').tagit({
            availableTags: sampleTags
        });
      });
</script>
<!-- end autocomplete plugin -->

  <%= simple_form_for(@artwork) do |f| %>
  <%= f.error_notification %>
<div class="row-fluid">
    <div class="span3">
   <fieldset>
     <legend>Description</legend>
     <%= f.input :title %>
     <%= f.input :year, 
                 collection: 1990..Date.today.year, 
                 selected: Date.today.year %>
     <%= f.input :category, 
                 collection: [ "Paintings", "Watercolors", "Drawings", "Prints"], 
                 selected: "Paintings" %>
     <%= f.input :size %>
     <%= f.input :medium %>

   </fieldset>
  </div>    
  <div class="span5">  
    <fieldset>
      <legend>Image</legend>
    <%= f.input :asset, as: :file, :label => "Upload Image" %>
    <% if f.object.asset? %>
      <div class="control-group">
        <label class="control-label">Current Image</label>
      <div class="controls">
      <%= image_tag f.object.asset(:thumbnail) %>
    <% end %>
    <br />
    <%= f.label :tag_list, "Keywords" %>
    <%= f.text_field :tag_list, id: "tagit", data: { keywords: big_tag_list.to_json } %>
    </fieldset>
  </div>
   <div class="span4">
       <fieldset>      
       <legend>Business Record</legend>
       <%= f.input :price, input_html: { step: '25' } %>
       <%= f.input :sold, as: :select %>
       <%= f.input :datesold, as: :date, 
                   start_year: 1990,
                   end_year: Date.today.year, 
                   order: [:month, :day, :year], 
                   :label => "Date Sold" %>
       <%= f.input :soldto, :label => "Sold To" %> 
     </fieldset>
   </div> 
</div>
    <legend>Misc</legend>
<div class="row-fluid">  

    <div class="span3">
     <%= f.input :notes %>  
    </div>  
    <div class="span9">
     <%= f.association :galleries, as: :check_boxes %>
    </div>   
</div>  
      

  <div class="actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= link_to "Back", artworks_path, class: 'btn' %>
  </div>
<% end %>

<!-- autocomplete plugin -->
<%= tag "div", id: "keywords", data: { keywords: big_tag_list.to_json } %>
<script>
    $(function(){
        var sampleTags = $('#keywords').data('keywords');
        $('#tagit').tagit({
            availableTags: sampleTags
        });
      });
</script>
<!-- end autocomplete plugin -->

<%= simple_form_for(@artwork) do |f| %>
  <%= f.error_notification %>
    <%= f.input :title %>
    <fieldset>
      <%= f.input :asset, as: :file, :label => "Upload Image" %>
        <% if f.object.asset? %>
          <div class="control-group">
            <label class="control-label">Current Image</label>
          <div class="controls">
          <%= image_tag f.object.asset.url %>
        <% end %>
        <br />
      <%= f.label :tag_list, "Keywords" %>
      <%= f.text_field :tag_list, id: "tagit" %>
      <%= f.association :galleries, as: :check_boxes %>
      
    </fieldset>
    <fieldset>
      <legend>Description</legend>
      <%= f.input :year, 
                  collection: 1990..Date.today.year, 
                  selected: Date.today.year %>
      <%= f.input :category, 
                  collection: [ "Paintings", "Watercolors", "Drawings", "Prints"], 
                  selected: "Paintings" %>
      <%= f.input :size %>
      <%= f.input :medium %>
      <%= f.input :notes %>
    </fieldset>
    <fieldset>
      <legend>Business Record</legend>
      <%= f.input :price, input_html: { step: '25' } %>
      <%= f.input :sold, as: :select %>
      <%= f.input :datesold, as: :date, 
                  start_year: 1990,
                  end_year: Date.today.year, 
                  order: [:month, :day, :year], 
                  :label => "Date Sold" %>
      <%= f.input :soldto, :label => "Sold To" %>
    </fieldset>
    <div class="actions">
      <div class="form-actions">
      <%= f.submit "Update", class: 'btn btn-primary' %>
      <%= link_to "Back", artworks_path, class: 'btn' %>
    </div>
<% end %>
